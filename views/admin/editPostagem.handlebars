<div class="card">

    <div class="card-body">
        {{#each erros}}
        <div class="alert alert-danger">{{Texto}}</div>
        {{else}}
        {{/each}}
        <form action="/admin/postagem/edite" method="post">

            <label for="Titulo">Título:</label>
            <input type="text" value="{{postagens.Titulo}}" name="Titulo" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" value="{{postagens.Slug}}" name="slug" class="form-control">
            <label for="descricao">Descrição: </label>
            <input type="text" value="{{postagens.Descricao}}" name="descricao" class="form-control">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="form-control">{{postagens.Conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" value="{{categoria.Nome}}" class="custom-select mt-4">
                {{#each categorias}}
                <option value="{{_id}}">{{Nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select>
            <button class="form-control btn btn-success mt-4" type="submit">Salvar</button>

        </form>
    </div>
</div>