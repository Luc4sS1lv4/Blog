<div class="card">

    <div class="card-body">
        {{#each erros}}
        <div class="alert alert-danger">{{Texto}}</div>
        {{else}}
        {{/each}}
        <form action="/admin/postagem/nova" method="post">

            <label for="Titulo">Título:</label>
            <input type="text" placeholder="Escreva seu título" name="Titulo" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="form-control"></textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select mt-4">
                {{#each categoria}}
                <option value="{{_id}}">{{Nome}}</option>
                {{else}}
                <option value="0">Nenhuma Categoria Registrada</option>
                {{/each}}
            </select>
            <button class="form-control btn btn-success mt-4" type="submit">Criar Postagem</button>

        </form>
    </div>
</div>